{
	"$schema": "https://raw.githubusercontent.com/Kumamto/Consent-O-Matic/master/rules.schema.json",
    "mydealz.de": {
        "detectors": [
            {
                "presentMatcher": {
                    "type": "css",
                    "target": {
                        "selector": "div.flex--fromW3.hAlign--all-c"
                    }
                },
                "showingMatcher": {
                    "type": "css",
                    "target": {
                        "selector": "div.flex--fromW3.hAlign--all-c"
                    }
                }
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "button.flex--grow-1.flex--fromW3-grow-0.width--fromW3-ctrl-m.text--b"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "trueAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "label.checkbox.checkbox--switch.size--all-m",
                                            "textFilter": "Personalisierungs-Cookies"
                                        }
                                    },
                                    "type": "F"
                                }
                            ]
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "trueAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "label.checkbox.checkbox--switch.size--all-m",
                                            "textFilter": "Funktionalit√§ts-Cookies"
                                        }
                                    },
                                    "type": "A"
                                }
                            ]
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "trueAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "label.checkbox.checkbox--switch.size--all-m",
                                            "textFilter": "Analyse-Cookies"
                                        }
                                    },
                                    "type": "B"
                                }
                            ]
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "click",
                            "target": {
                                "childFilter": {
                                    "target": {
                                        "selector": "span.btn.btn--mode-primary",
                                        "textFilter": "Einstellungen speichern"
                                    }
                                },
                                "selector": "button.width--all-12"
                            }
                        }
                    ]
                },
                "name": "SAVE_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "click",
                            "target": {
                                "childFilter": {
                                    "target": {
                                        "selector": "span.btn.btn--mode-primary",
                                        "textFilter": "Einstellungen speichern"
                                    }
                                },
                                "selector": "button.width--all-12"
                            }
                        }
                    ]
                },
                "name": "HIDE_CMP"
            }
        ]
    }
}