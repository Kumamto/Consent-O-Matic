{
  "$schema": "https://raw.githubusercontent.com/Kumamto/Consent-O-Matic/master/rules.schema.json",
  "trustarcibm": {
    "detectors": [
      {
        "presentMatcher": {
          "target": {
            "selector": "#truste-consent-content, .truste-consent-content, #truste-consent-track"
          },
          "type": "css"
        },
        "showingMatcher": {
          "target": {
            "selector": "#truste-consent-content, .truste-consent-content, #truste-consent-track"
          },
          "type": "css"
        }
      }
    ],
    "methods": [
      {
        "action": {
          "actions": [
            {
              "parent": null,
              "target": {
                "displayFilter": true,
                "selector": "#truste-show-consent"
              },
              "type": "waitcss"
            },
            {
              "target": {
                "selector": "#truste-show-consent"
              },
              "type": "click"
            },
            {
              "type": "waitcss",
              "target": {
                "selector": ".cookiecat"
              },
              "parent": {
                "selector": ".mainContent"
              },
              "retries": 10,
              "waitTime": 250
            }
          ],
          "type": "list"
        },
        "name": "OPEN_OPTIONS"
      },
      {
        "action": {
          "type": "list",
          "actions": [
            {
                "type":"foreach",
                "target":{
                    "selector": ".cookiecat"
                },
                "action":{
                    "type":"list",
                    "actions":[
                    {
                        "type": "ifcss",
                        "target": {
                          "selector": "h3",
                          "textFilter": "Functional Cookies"
                        },
                        "trueAction": {
                          "type": "consent",
                          "consents": [
                            {
                              "matcher": {
                                "type": "css",
                                "target": {
                                  "childFilter": {
                                    "target": {
                                      "selector": "span[role='option'].active"
                                    }
                                  },
                                  "selector": ".switch"
                                }
                              },
                              "trueAction": {
                                "type": "click",
                                "target": {
                                  "selector": ".switch span.on[role='option']"
                                }
                              },
                              "falseAction": {
                                "type": "click",
                                "target": {
                                  "selector": ".switch span.off[role='option']"
                                }
                              },
                              "type": "A"
                            }
                          ]
                        }
                      },
                      {
                        "type": "ifcss",
                        "target": {
                          "selector": "h3",
                          "textFilter": "Personalization Cookies"
                        },
                        "trueAction": {
                          "type": "consent",
                          "consents": [
                            {
                              "matcher": {
                                "type": "css",
                                "target": {
                                  "childFilter": {
                                    "target": {
                                      "selector": "span[role='option'].active"
                                    }
                                  },
                                  "selector": ".switch"
                                }
                              },
                              "trueAction": {
                                "type": "click",
                                "target": {
                                  "selector": ".switch span.on[role='option']"
                                }
                              },
                              "falseAction": {
                                "type": "click",
                                "target": {
                                  "selector": ".switch span.off[role='option']"
                                }
                              },
                              "type": "B"
                            }
                          ]
                        }
                      }
                    ]
                  }
                }
                ]
                },
        "name": "DO_CONSENT"
      },
      {
        "action": {
          "type": "list",
          "actions": [
            {
              "type": "click",
              "target": {
                "selector": ".submit"
              }
            }
        ]
        },
        "name":"SAVE_CONSENT"
    },
    {
        "action":
        {
            "type":"list",
            "actions":[
                {
                    "type": "hide",
                    "target": {
                    "selector": ".mainContent"
                    }
                },
                {
                    "type": "hide",
                    "target": {
                    "selector": "#truste-consent-content"
                    }
                }
            ]
            
        },
        "name": "HIDE_CMP"
      }   
    ]
  }
}
